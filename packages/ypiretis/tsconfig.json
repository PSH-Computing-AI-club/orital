{
    "extends": "../../tsconfig.json",

    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/.server/**/*.ts",
        "**/.server/**/*.tsx",
        "**/.client/**/*.ts",
        "**/.client/**/*.tsx"
    ],

    "compilerOptions": {
        "baseUrl": ".",
        "rootDirs": [".", "./.react-router/types"],

        "paths": {
            "~/*": ["./app/*"]
        },

        "noEmit": true,

        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "Bundler",

        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "types": ["bun-types", "@react-router/node", "vite/client"],

        "isolatedModules": true,
        "esModuleInterop": true
    }
}
